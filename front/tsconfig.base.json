{
  "compileOnSave": false,
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@data": ["src/app/data"],
      "@data/*": ["src/app/data/*"],
      "@core": ["src/app/core"],
      "@core/*": ["src/app/core/*"],
      "@shared": ["src/app/shared"],
      "@shared/*": ["src/app/shared/*"],
      "@theme": ["src/app/theme"],
      "@theme/*": ["src/app/theme/*"],
      "@testing": ["src/testing"],
      "@testing/*": ["src/testing/*"],
      "@env": ["src/environments"],
      "@env/*": ["src/environments/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
